<h1>List Cart</h1>
<div class="row">
    <div class="col-md-12">
        <table class="table">
            <thead>
                <tr>
                    <th>Product</th>
                    <th>Price</th>
                    <th>Discount</th>
                    <th>Quantity</th>
                    <th>Total</th>
                    <th>Actions</th>
                </tr>
            </thead>
            <tbody>
                <%@cart.cart_items.each do |item|%>
                    <tr>
                        <td><%= item.product.name%></td>
                        <td>$<%= item.product.price%></td>
                        <td>$<%= item.product.coupon.coupon rescue 0%></td>
                        <td><%= item.quantity%></td>
                        <td>$<%= (item.product.price.to_i - (item.product.coupon.coupon.to_i rescue 0)) * item.quantity %></td>
                        <td><%= link_to 'delete', delete_cart_path(item.product.id, item.id)%></td>
                    </tr>
                <%end%>
            </tbody>
        </table>
    </div>
</div>
